{
  "name": "Voice DIM",
  "description": "Control DIM with your voice.",
  "version": "1.0.2",
  "manifest_version": 3,
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.destinyitemmanager.com/*"],
      "js": ["js/dim-voice.js"],
      "css": ["css/dim-voice.css"]
    }
  ],
  "commands": {
    "dim-listen": {
      "suggested_key": {
        "default": "Ctrl+Shift+0"
      },
      "description": "Start/Stop listening for DIM commands",
      "global": true
    }
  },
  "action": {
    "default_icon": "icon.png",
    "default_title": "Voice DIM"
  },
  "icons": {
    "128": "icon.png"
  },
  "options_ui": {
    "page": "html/options.html",
    "open_in_tab": true
  },
  "host_permissions": ["https://www.bungie.net/*"],
  "permissions": ["tabs", "storage"],
  "web_accessible_resources": [
    {
      "resources": ["mic.png", "icon_large.png"],
      "matches": ["https://*.destinyitemmanager.com/*"]
    }
  ]
}
