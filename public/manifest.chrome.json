{
  "name": "Voice DIM",
  "description": "Control DIM with your voice.",
  "version": "1.1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.destinyitemmanager.com/*inventory"],
      "js": ["js/voiceDim.js"],
      "css": ["css/voiceDim.css"]
    }
  ],
  "commands": {
    "dim-listen": {
      "suggested_key": {
        "default": "Ctrl+Shift+0"
      },
      "description": "Start/Stop listening for DIM commands",
      "global": true
    }
  },
  "action": {
    "default_icon": "icon_128.png",
    "default_title": "Voice DIM"
  },
  "icons": {
    "16": "icon_16.png",
    "32": "icon_32.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "options_ui": {
    "page": "html/options.html",
    "open_in_tab": true
  },
  "host_permissions": ["https://www.bungie.net/*"],
  "permissions": ["tabs", "storage", "notifications"],
  "web_accessible_resources": [
    {
      "resources": ["icon_large.png"],
      "matches": ["https://*.destinyitemmanager.com/*"]
    }
  ]
}
